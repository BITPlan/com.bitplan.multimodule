	<groupId>com.bitplan.multimodule</groupId>
	<artifactId>com.bitplan.multimodule</artifactId>
	<version>0.0.3</version>
	<name>Multi-Module</name>
	<description>Test-Project for a Multi-Module release</description>
	<properties>
		<!-- to make parent pom work -->
		<github.project>com.bitplan.multimodule</github.project>
		<!-- for README.md generation -->
		<documentation.wiki>http://www.bitplan.com/OpenSource</documentation.wiki>
		<!--  activate parent profiles ... -->
