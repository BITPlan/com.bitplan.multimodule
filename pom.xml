		<createTestJar>true</createTestJar>
	</properties>
	<packaging>pom</packaging>
	<modules>
		<module>multimodule-module1</module>
		<module>multimodule-module2</module>
	</modules>
	<dependencies>
		<!-- JUnit testing -->
		<dependency>
			<groupId>junit</groupId>
			<artifactId>junit</artifactId>
		</dependency>
		<!-- https://mvnrepository.com/artifact/org.hamcrest/hamcrest-all -->
		<dependency>
			<groupId>org.hamcrest</groupId>
			<artifactId>hamcrest-all</artifactId>
		</dependency>
	</dependencies>
